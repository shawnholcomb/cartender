<div class="garage-body">
  <div class="row no-gutters garage-body-row">
    <div class="col-lg-2 col-md-3 order-md-1 order-2 pl-3 pr-0 bg-white garage-column">
      <div id="add-new">
        <a class="nav-link" data-toggle="modal" data-target=".addVehicle-modal"><i class="fas fa-plus"></i>Add
          Vehicle</a>
      </div>

      <div class="list-group" id="list-tab" role="tablist">
        <a class="list-group-item list-group-item-action active" id="list-garage-list" data-toggle="list"
          href="#list-garage" role="tab" aria-controls="home"><i class="fas fa-file-alt"></i>My Garage</a>
        <a class="list-group-item list-group-item-action" id="list-fuel-list" href="/map" target="_blank" role="tab"><i
            class="fas fa-gas-pump"></i>Find Fuel</a>
        <a class="list-group-item list-group-item-action" id="list-shops-list" data-toggle="list" href="#list-shops"
          role="tab" aria-controls="profile"><i class="fas fa-oil-can"></i>Find Shops</a>
        <a class="list-group-item list-group-item-action" id="list-settings-list" data-toggle="list"
          href="#list-settings" role="tab" aria-controls="settings"><i class="fas fa-cog"></i>Settings</a>
      </div>
    </div>
    <div class="col-lg-10 col-md-9 order-md-2 order-1">
      <div class="profile mx-0">
        <div class="row no-gutters">
          <div class="col-md-2 col-sm-12 col-xs-1 profile-image">
            <img src="/images/profile-image.jpg" id="prof-pic">
          </div>
          <div class="col-md-4 col-sm-6 col-xs-12 profile-text">
            <h2 class="mb-3">John's Garage</h2>
            <h4 class="mb-3">2 Vehicles</h3>
              <h5>Insurance: State Farm</h5>
              <h5>Insurance Expires: 7/2019</h5>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 profile-text d-flex flex-column justify-content-between">
            <h3 class="mb-3">0 notifications<i class="fas fa-bell ml-3"></i></h3>
            <div id="buttons-in-div">
              <button class="nav-link mb-2" data-toggle="modal" data-target=".profile-modal" id="edit">Edit
                Profile</button>
              <button class="nav-link" id="signout">Sign Out</button>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="list-garage" role="tabpanel" aria-labelledby="list-garage-list">

          {{#each dbvehicle}}

          <div class="vehicle">
            <div class="row no-gutters vehicle-name pt-2" id="vehicle-{{this.id}}">
              <div class="mx-3 open-close plus plus-vehicle-{{this.id}}">
                <h1>+</h1>
              </div>
              <div class="mx-3 open-close minus minus-vehicle-{{this.id}}">
                <h1>-</h1>
              </div>
              <div class="my-auto">
                <h3>{{this.year}} {{this.make}} {{this.model}}</h3>
              </div>
            </div>
            <div class="row no-gutters ind-vehicle">
              <table class="vehicle-details vehicle-{{this.id}}">
                <tr>
                  <td>VIN:</td>
                  <td>{{this.vin}}</td>
                </tr>
                <tr>
                  <td>License Plate:</td>
                  <td>{{this.plate}}</td>
                </tr>
                <tr>
                  <td>Registration Exp:</td>
                  <td>{{this.registration}}</td>
                </tr>
                <tr>
                  <td>Last Oil Change:</td>
                  <td>
                    <table class="inner-table">
                      <tr>
                        <td>Date:</td>
                        <td>{{this.last_oil_change_date}}</td>
                      </tr>
                      <tr>
                        <td> Mileage:</td>
                        <td>{{this.last_oil_change_miles}}</td>
                      </tr>
                      <tr>
                        <td class="pb-0"><button class="reminder" id="oil-change-reminder"><i
                              class="fas fa-bell"></i>Set Reminder</button></td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr>
                  <td>Tires</td>
                  <td>
                    <table class="inner-table">
                      <tr>
                        <td>Date:</td>
                        <td>{{this.tires_date}}</td>
                      </tr>
                      <tr>
                        <td> Mileage:</td>
                        <td class="pb-0">{{this.tires_miles}}</td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr>
                  <td>
                    <h6 class="delete-link" data-id="{{{this.id}}}"><i class="fas fa-trash-alt"></i> DELETE THIS VEHICLE
                    </h6>
                  </td>
                </tr>
              </table>
            </div>
          </div>

          {{/each}}

        </div>

        <div class="tab-pane fade" id="list-fuel" role="tabpanel" aria-labelledby="list-fuel-list">
          <a href="/map">My Fuel Map</a>
          {{#each mygasfeed}}
          <h6>{{this.address}}</h6>
          {{/each}}


        </div>
        <div class="tab-pane fade mx-auto" id="list-shops" role="tabpanel" aria-labelledby="list-shops-list">
          <h1 class="coming-soon">COMING SOON</h1>
        </div>
        <div class="tab-pane fade mx-auto" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">
          <h1 class="coming-soon">COMING SOON</h1>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade addVehicle-modal" tabindex="-1" role="dialog" aria-labelledby="addVehicleModal"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content p-5">
      <div id="addVhicle-toggle">
        <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
          <span caria-hidden="true">&times;</span>
        </button>
        <form action="/api/garage" method="POST">
          <h2 class="font-weight-bold mb-3">Add Vehicle</h2>
          <h5 class="mb-3">Simply submit your vehicle info to get started</h5>

          <div class="input-group mb-3">
            <input type="text" id="year" class="form-control" aria-label="year" placeholder="Year"
              aria-describedby="inputGroup-sizing-default" name="year" required>
          </div>

          <div class="input-group mb-3">
            <input type="text" id="make" class="form-control" aria-label="make" placeholder="Make"
              aria-describedby="inputGroup-sizing-default" name="make" required>
          </div>

          <div class="ingit ut-group mb-3">
            <input type="text" id="model" class="form-control" aria-label="model" placeholder="Model"
              aria-describedby="inputGroup-sizing-default" name="model" required>
          </div>

          <div class="input-group mb-3">
            <input type="text" id="vin" class="form-control" aria-label="vin" placeholder="Vin Number"
              aria-describedby="inputGroup-sizing-default" name="vin">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="plate" class="form-control" aria-label="plate" placeholder="Plate Number"
              aria-describedby="inputGroup-sizing-default" name="plate" required>
          </div>

          <div class="input-group mb-3">
            <input type="text" id="registration" class="form-control" aria-label="registration"
              placeholder="Registration Date" aria-describedby="inputGroup-sizing-default" name="registration" required>
          </div>

          <div class="input-group mb-3">
            <input type="text" id="last-oil-change-date" class="form-control" aria-label="last-oil-change"
              placeholder="Last Oil Change (Date)" aria-describedby="inputGroup-sizing-default"
              name="last_oil_change_date" onfocus="(this.type='date')" onblur="(this.type='text')">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="last-oil-change-miles" class="form-control" aria-label="last-oil-change-mile"
              placeholder="Last Oil Change (Mileage)" aria-describedby="inputGroup-sizing-default"
              name="last_oil_change_miles">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="tires-date" class="form-control" aria-label="tires-date"
              placeholder="New Tires (Date)" aria-describedby="inputGroup-sizing-default" name="tires_date"
              onfocus="(this.type='date')" onblur="(this.type='text')">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="tires-miles" class="form-control" aria-label="tires-miles"
              placeholder="New Tires (Mileage)" aria-describedby="inputGroup-sizing-default" name="tires_miles">
          </div>

          <h6><span id="wrongInfo"></span></h6>
          <a href="/garage">
            <button id="submit" name="submit">Submit</button>
          </a>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="modal fade profile-modal" tabindex="-1" role="dialog" aria-labelledby="profileModal" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content p-5">
      <div id="profile-toggle">
        <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
          <span caria-hidden="true">&times;</span>
        </button>
        <form action="/api/profile" method="put">
          <h2 class="font-weight-bold mb-3">Update Your Information</h2>
          <div class="input-group mb-3">
            <input type="text" id="first-name" class="form-control" aria-label="First Name" placeholder="First Name"
              aria-describedby="inputGroup-sizing-default" name="First Name">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="last-name" class="form-control" aria-label="Last Name" placeholder="Last Name"
              aria-describedby="inputGroup-sizing-default" name="Last Name">
          </div>

          <div class="ingit ut-group mb-3">
            <input type="text" id="insurance-co" class="form-control" aria-label="insurance-co"
              placeholder="Insurance Company" aria-describedby="inputGroup-sizing-default" name="insurance-co">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="insurance-date" class="form-control" aria-label="insurance-date"
              placeholder="Insurance Expiration Date" aria-describedby="inputGroup-sizing-default"
              name="insurance-date">
          </div>

          <div class="input-group mb-3">
            <input type="text" id="profile-pic" class="form-control" aria-label="profile-pic"
              placeholder="Profile Picture (link to jpg, png, bmp, etc.)" aria-describedby="inputGroup-sizing-default"
              name="profile-pic">
          </div>

          <h6><span id="wrongInfo"></span></h6>
          <a href="/garage">
            <button class="mb-3" id="profile-submit" name="submit">Submit</button>
          </a>
        </form>
      </div>
    </div>
  </div>
</div>